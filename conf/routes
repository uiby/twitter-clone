# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /list                       controllers.UserController.list()

GET     /signup                     controllers.UserController.signup()
POST    /signup                     controllers.UserController.userAdd()
GET     /signin                     controllers.UserController.signin()
GET     /signout                    controllers.UserController.signout()

GET     /tweet                      controllers.TweetController.tweet()
POST    /tweet                      controllers.TweetController.addNewTweet()
GET     /search                     controllers.TweetController.search()
POST    /fav_tweet_id               controllers.TweetController.favorite(fav_tweet_id: String)
POST    /retweet_id                 controllers.TweetController.retweet(retweet_id: String)
POST    /get_tweet_id               controllers.TweetController.getTweet(get_tweet_id: String)
POST    /reply                      controllers.TweetController.reply(send_tweet_id: String, messages: String)
GET     /javascripteRoute           controllers.TweetController.javascriptRoutes()

GET     /                           controllers.UserController.home()
GET     /timeline                   controllers.TweetController.showTimeline()
GET     /:user_id                   controllers.TweetController.userTweetList(user_id: String)
GET     /:user_id/favorites         controllers.TweetController.userFavoriteList(user_id: String)
GET     /:user_id/following         controllers.UserController.followingList(user_id: String)
GET     /:user_id/followers         controllers.UserController.followerList(user_id: String)

